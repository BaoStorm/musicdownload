{
    "background": {
        "presistent": true,
        "scripts": ["background.js" ]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png"
          },
        "default_title": "音乐下载器"
    },
    "description": "一个下载音乐的工具",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2,
    "name": "音乐下载器",
    "permissions": [ "notifications", "unlimitedStorage", "downloads","storage", "contextMenus", "tabs", "*://*.163.com/*", "*://*.xiami.com/*", "*://*.qq.com/*","*://*.baidu.com/*","*://*.qianqian.com/*","*://*.taihe.com/*","*://*.kuwo.cn/*", "webRequest", "webRequestBlocking"],
    "version": "1.0.1",
    "web_accessible_resources": [ "images/*" ]
}
